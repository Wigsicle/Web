@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="row" style="padding-top: 100px;">
    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Profile</h4>
            </div>
            <div class="row mt-2">
                <div class="col-md-6"><label class="labels">Name: @Model.name</label><input type="text" class="form-control" value="@Model.Name" disabled></div>
                <div class="col-md-6"><label class="labels">Contact Number: @Model.contactNo</label><input type="text" class="form-control" value="@Model.ContactNo" disabled></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6"><label class="labels">Date of Birth: @Model.dob</label><input type="text" class="form-control" value="@Model.Dob.ToString()" disabled></div>
                <div class="col-md-6"><label class="labels">Gender: @Model.gender</label><input type="text" class="form-control" value="@Model.Gender" disabled></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12"><label class="labels">Address: @Model.address</label><input type="text" class="form-control" value="@Model.Address" disabled></div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6"><label class="labels">Parent's Name: @Model.parentName</label><input type="text" class="form-control" value="@Model.ParentName" disabled></div>
                <div class="col-md-6"><label class="labels">Parent's Contact Number: @Model.parentNo</label><input type="text" class="form-control" value="@Model.ParentNo" disabled></div>
            </div>
        </div>
    </div>

    <div class="col-md-2"></div>
</div>
